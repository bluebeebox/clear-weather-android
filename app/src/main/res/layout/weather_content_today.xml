<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/VerticalLinearLayout"
    android:layout_height="wrap_content">

    <TextView
        style="@style/CenterTextView"
        android:text="@string/day_today"
        android:textSize="16sp"/>

    <LinearLayout
        style="@style/HorizontalLinearLayout"
        android:layout_marginTop="4dp">

        <RelativeLayout
            style="@style/TodayDetailItemLayout.Left">

            <TextView
                android:id="@+id/tv_today_day"
                style="@style/TodayDetailTextView"
                android:layout_toLeftOf="@+id/tv_today_day_title"
                android:layout_toStartOf="@+id/tv_today_day_title"
                android:text="晴"/>

            <TextView
                android:id="@+id/tv_today_day_title"
                style="@style/TodayDetailTextView.Title.Left"
                android:text="@string/detail_title_day"/>
        </RelativeLayout>

        <RelativeLayout
            style="@style/TodayDetailItemLayout.Right">

            <TextView
                android:id="@+id/tv_today_humidity_title"
                style="@style/TodayDetailTextView.Title.Right"
                android:text="@string/detail_title_humidity"/>

            <TextView
                android:id="@+id/tv_today_humidity"
                style="@style/TodayDetailTextView"
                android:layout_toRightOf="@+id/tv_today_humidity_title"
                android:text="50%"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/HorizontalLinearLayout">

        <RelativeLayout
            style="@style/TodayDetailItemLayout.Left">

            <TextView
                android:id="@+id/tv_today_night"
                style="@style/TodayDetailTextView"
                android:layout_toLeftOf="@+id/tv_today_night_title"
                android:layout_toStartOf="@+id/tv_today_night_title"
                android:text="多云"/>

            <TextView
                android:id="@+id/tv_today_night_title"
                style="@style/TodayDetailTextView.Title.Left"
                android:text="@string/detail_title_night"/>
        </RelativeLayout>

        <RelativeLayout
            style="@style/TodayDetailItemLayout.Right">

            <TextView
                android:id="@+id/tv_today_rain_probability_title"
                style="@style/TodayDetailTextView.Title.Right"
                android:text="@string/detail_title_rain_probability"/>

            <TextView
                android:id="@+id/tv_today_rain_probability"
                style="@style/TodayDetailTextView"
                android:layout_toRightOf="@+id/tv_today_rain_probability_title"
                android:text="98%"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/HorizontalLinearLayout">

        <RelativeLayout
            style="@style/TodayDetailItemLayout.Left">

            <TextView
                android:id="@+id/tv_today_temperature"
                style="@style/TodayDetailTextView"
                android:layout_toLeftOf="@+id/tv_today_temperature_title"
                android:layout_toStartOf="@+id/tv_today_temperature_title"
                android:text="15˚~18˚"/>

            <TextView
                android:id="@+id/tv_today_temperature_title"
                style="@style/TodayDetailTextView.Title.Left"
                android:text="@string/detail_title_temperature"/>
        </RelativeLayout>

        <RelativeLayout
            style="@style/TodayDetailItemLayout.Right">

            <TextView
                android:id="@+id/tv_today_distance_title"
                style="@style/TodayDetailTextView.Title.Right"
                android:text="@string/detail_title_distance"/>

            <TextView
                android:id="@+id/tv_today_distance"
                style="@style/TodayDetailTextView"
                android:layout_toRightOf="@+id/tv_today_distance_title"
                android:text="10 km"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
